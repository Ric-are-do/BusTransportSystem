@using BusServiceApplication.Pages.StudentComponents;
@using BusServiceApplication.Pages.BusRoutComponenet;
@page "/ParentPage/{UserName}"
@inject LoginPageService loginPageService

<h1>Welcome @thisUserDetails.firstName</h1>
<p>
    Below are the details we have for you
</p>

<ul>
    <li>DB ID : @thisUserDetails.Id</li>
    <li>Name : @thisUserDetails.firstName </li>
    <li>Surname : @thisUserDetails.lastName</li>
    <li>Contact Number : @thisUserDetails.phoneNumber</li>
    <li>Email address : @thisUserDetails.emailAddress</li>
</ul>

@*below we set the vaue for the add student compinenet to match the parent ID *@
<AddStudent ParentID="@thisUserDetails.Id" />
<DisplayListOfStudents ParentID="thisUserDetails.Id" />
<BusRoutCompinenets ParentID="thisUserDetails.Id" />

<div class="container">
    <div class="row">
        <div class="col-lg-12 border border-primary">
            <h1>Large first container </h1>

            <div class="container ">
                <div class="row">
                    <div class="col-lg-4 align-content-center border border-primary">
                        <div class=" align-content-center">
                            Container 1
                            <h1>Welcome @thisUserDetails.firstName</h1>
                            <p>Below are the details we have for you</p>
                            <ul class="list-group">
                                <li class="list-group-item">DB ID : @thisUserDetails.Id</li>
                                <li class="list-group-item">Name : @thisUserDetails.firstName</li>
                                <li class="list-group-item">Surname : @thisUserDetails.lastName</li>
                                <li class="list-group-item">Contact Number : @thisUserDetails.phoneNumber</li>
                                <li class="list-group-item">Email address : @thisUserDetails.emailAddress</li>
                                <li class="list-group-item"><button class="btn btn-primary">Update</button></li>
                            </ul>

                        </div>
                    </div>
                    <div class="col-lg-8  border border-primary">
                        <div class="p-3">
                            Container 2

                            <DisplayListOfStudents ParentID="thisUserDetails.Id" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="p-3">
                            Container 3
                            <BusRoutCompinenets ParentID="thisUserDetails.Id" />
                            <AddStudent ParentID="@thisUserDetails.Id" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@code {
    [Parameter]
    public string UserName { get; set; }
    public ParentDetails thisUserDetails { get; set; }

    //this code will run when the page is loaded.Allowing us to set up data on load
    protected override async Task OnInitializedAsync()
    {
        thisUserDetails = loginPageService.GetParentObjectWithUserName(UserName);
        // All methods  that should run on load
    }




}
